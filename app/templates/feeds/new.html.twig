{% extends 'layouts/appBase.html.twig' %}
{% block page %}
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-lg-push-4">
                <h1>Post a Feed</h1>
                <form id="newFeed" action="/feeds/new" method="post">
                    <div class="form-group">
                        <label for="title" class="control-label">Title</label>
                        <input type="text" id="title" class="form-control" name="title" placeholder="What have you got?" value="" required>
                    </div>
                    <div class="form-group">
                        <label for="description" class="control-label">Name</label>
                        <textarea id="description" class="form-control" name="description" placeholder="Description" required></textarea>
                    </div>

                    <fieldset class="form-group">
                        <label for="photo">Upload a photo</label>
                        <input type="file" class="form-control-file" id="photo" accept="image/*;capture=camera" required>
                    </fieldset>

                    <fieldset>
                        <legend>Location</legend>
                        <div class="form-group">
                            <label for="line1" class="control-label">Line 1</label>
                            <input type="text" id="line1" class="form-control" name="line1" placeholder="Line 1" value="" required>
                        </div>
                        <div class="form-group">
                            <label for="line2" class="control-label">Line 2</label>
                            <input type="text" id="line2" class="form-control" name="line2" placeholder="Line 2" value="">
                        </div>
                        <div class="form-group">
                            <label for="suburbId">Suburb</label>
                            <select class="form-control" id="suburbId" name="suburbId" required>
                                <option value="" disabled selected>Suburb</option>
                                {% for suburb in suburbs%}
                                    <option value="{{ suburb.suburbId }}">{{ suburb.name }} {{ suburb.postCode }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </fieldset>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
