{% extends 'layouts/appBase.html.twig' %}
{% block page %}
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-lg-push-4">
                <img class="img-responsive img-feed-photo feed-details-photo" src="photos/{{ feed.feedId ~ '.' ~ feed.fileExt }}" alt="photo">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <h2>{{ feed.title|e }}</h2>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Description
                    </div>
                    <div class="panel-body">
                        <p>{{ feed.description|e }}</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <h4>Contact</h4>
                <div class="row">
                    <div class="well">
                        Phone: {{ owner.phone }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <iframe
                                width="100%"
                                height="450"
                                frameborder="0" style="border:0"
                                src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCXDY4ENKPH-q2R4QEC6uiTOiTiIhH1RP4&q={{ address.firstLine ~ ' ' ~ address.secondLine ~ ', ' ~ suburb.name|escape('url') }}" allowfullscreen>
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
