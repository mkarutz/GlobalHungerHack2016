{% extends 'layouts/appBase.html.twig' %}
{% block page %}
    <div class="container">
        <form method="get" class="form-inline">
            <div class="form-group">
                <label for="suburbId">Suburb</label>
                <select class="form-control" id="suburbId" name="suburbId" required>
                    <option value="" disabled selected>Find Feeds in...</option>
                    {% for suburb in suburbs %}
                        <option value="{{ suburb.suburbId }}">{{ suburb.name }} {{ suburb.postCode }} {% if suburbParam is defined and suburbParam.suburbId == suburb.suburbId %}selected{% endif %}></option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
        <div class="row">
            <div class="panel panel-default">
                <ul class="search-results-list">
                    {% for feed in feeds %}
                        <li class="search-result">
                            <a href="/feeds/{{ feed.feedId }}">
                                <div class="row">
                                    <div class="search-result">
                                        <div class="col-lg-3">
                                            <img class="img-responsive img-feed-photo" src="photos/{{ feed.feedId }}"
                                                 alt="photo">
                                        </div>
                                        <div class="col-lg-9">
                                            <h3 class="search-result-header">{{ feed.title }}</h3>
                                            <p class="search-result-description">{{ feed.description }}</p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
